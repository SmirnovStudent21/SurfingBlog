@model SurfClub.Models.ViewModels.RegisterViewModel

<form asp-controller="Register" asp-action="Register" asp-antiforgery="true">
    <div class="card">
        <div class="card-header">
            <label asp-for="Register">Регистрация</label>
            <div class="card-body">
                <div class="form.group">
                    <label asp-for="Nickname">Псевдоним*</label>
                    <input type="text" asp-for="Nickname" />
                    <span asp-validation-for="Nickname"> </span>
                </div>

                <div class="form.group">
                    <label asp-for="Email">Почта*</label>
                    <input type="text" asp-for="Email" />
                    <span asp-validation-for="Email"> </span>
                </div>

                <div class="form.group">
                    <label asp-for="Password">Пароль*</label>
                    <input type="password" asp-for="Password" />
                    <span asp-validation-for="Password"> </span>
                </div>

                <div class="form.group">
                    <label asp-for="PasswordConfirm">Подтвердите пароль*</label>
                    <input type="password" asp-for="PasswordConfirm" />
                    <span asp-validation-for="PasswordConfirm"> </span>
                </div>

                <div class="form.group">
                    <label asp-for="Surname">Фамилия</label>
                    <input type="text" asp-for="Surname" />

                </div>
                
                <div class="form.group">
                    <label asp-for="Name">Имя</label>
                    <input type="text" asp-for="Name" />

                </div>

                <div class="form.group">
                    <label asp-for="Contact">Контактная информация</label>
                    <textarea asp-for="Contact" rows="4" cols="64"></textarea>

                </div>

                <div class="form.group">
                    <label asp-for="AboutMe">О себе</label>
                    <textarea asp-for="AboutMe" rows="4" cols="64"></textarea>

                </div>

                <div class="form.group">
                    <label asp-for="Progress">Достижения</label>
                    <textarea asp-for="Progress" rows="4" cols="64"></textarea>

                </div>

                <div class="form.group">
                    <label asp-for="Photo">Выберите фото</label>
                    <input type="file"
                           accept=".jpg,.jpeg,.png"
                           name="imageData" />
                </div>

                <div class="validation" asp-validation-summary="ModelOnly">
                </div>

                <div class="form.group">
                    <input type="submit" value="Войти" />
                </div>
            </div>
        </div>

    </div>

</form>


